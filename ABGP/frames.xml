<Ui xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Frame name="ABGPLootAnchorDown" movable="true">
        <Size>
            <AbsDimension x="1" y="1"/>
        </Size>
        <Anchors>
            <Anchor point="TOP" relativeTo="UIParent" relativePoint="TOP">
                <Offset>
                    <AbsDimension x="0" y="-200"/>
                </Offset>
            </Anchor>
        </Anchors>
    </Frame>
    <Frame name="ABGPLootAnchorUp" movable="true">
        <Size>
            <AbsDimension x="1" y="1"/>
        </Size>
        <Anchors>
            <Anchor point="BOTTOM" relativeTo="UIParent" relativePoint="BOTTOM">
                <Offset>
                    <AbsDimension x="0" y="200"/>
                </Offset>
            </Anchor>
        </Anchors>
    </Frame>
    <Frame name="ABGPLootTemplate" parent="UIParent" toplevel="true" frameStrata="DIALOG" hidden="true" clampedToScreen="true" virtual="true" scale="1.0">
        <Size x="300" y="60"/>
        <Layers>
            <Layer level="ARTWORK">
                <Texture name="$parentSlotTexture" file="Interface\Buttons\UI-EmptySlot">
                    <Size>
                        <AbsDimension x="55" y="55"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="3" y="-3"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
                <Texture name="$parentNameFrame" file="Interface\MerchantFrame\UI-Merchant-LabelSlots">
                    <Size>
                        <AbsDimension y="56"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT" relativeTo="$parentSlotTexture" relativePoint="RIGHT">
                            <Offset>
                                <AbsDimension x="-8" y="-10"/>
                            </Offset>
                        </Anchor>
                        <Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
                            <Offset>
                                <AbsDimension x="9" y="-13"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
                <FontString parentKey="Name" name="$parentName" inherits="GameFontNormal" text="Item Name" justifyH="LEFT" justifyV="TOP">
                    <Size>
                        <AbsDimension y="12"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parentNameFrame" relativePoint="TOPLEFT">
                            <Offset>
                                <AbsDimension x="3" y="-4"/>
                            </Offset>
                        </Anchor>
                        <Anchor point="TOPRIGHT" relativeTo="$parentNameFrame" relativePoint="TOPRIGHT">
                            <Offset>
                                <AbsDimension x="-72" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString parentKey="Cost" name="$parentCost" inherits="GameFontNormal" text="GP Cost" justifyH="LEFT" justifyV="BOTTOM">
                    <Size>
                        <AbsDimension y="12"/>
                    </Size>
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" relativeTo="$parentNameFrame" relativePoint="BOTTOMLEFT">
                            <Offset>
                                <AbsDimension x="3" y="24"/>
                            </Offset>
                        </Anchor>
                        <Anchor point="BOTTOMRIGHT" relativeTo="$parentNameFrame" relativePoint="BOTTOMRIGHT">
                            <Offset>
                                <AbsDimension x="-72" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="OVERLAY">
                <Texture name="$parentDecoration" file="Interface\DialogFrame\UI-DialogBox-Gold-Dragon" hidden="true">
                    <Size>
                        <AbsDimension x="85" y="85"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="-16" y="10"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
                <Texture name="$parentCorner" file="Interface\DialogFrame\UI-DialogBox-Corner">
                    <Size>
                        <AbsDimension x="32" y="32"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPRIGHT">
                            <Offset>
                                <AbsDimension x="-6" y="-7"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Button parentKey="IconFrame" enableMouse="true">
                <Size x="37" y="37"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentSlotTexture" x="8" y="-9"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="Icon">
                            <Size x="37" y="37"/>
                            <Anchors>
                                <Anchor point="TOPLEFT"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                    <Layer level="OVERLAY">
                        <FontString parentKey="Count" inherits="NumberFontNormalLarge" justifyH="RIGHT" hidden="true">
                            <Anchors>
                                <Anchor point="BOTTOMRIGHT" x="-5" y="2"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnEnter>
                        local itemLink = self:GetParent().obj.itemLink;
                        if itemLink then
                            GameTooltip:SetOwner(self, "ANCHOR_RIGHT");
                            GameTooltip:SetHyperlink(itemLink);
                            CursorUpdate(self);
                        end
                    </OnEnter>
                    <OnLeave>
                        GameTooltip:Hide();
                        ResetCursor();
                    </OnLeave>
                    <OnUpdate>
                        if GameTooltip:IsOwned(self) then
                            GameTooltip:SetOwner(self, "ANCHOR_RIGHT");
                            GameTooltip:SetHyperlink(self:GetParent().obj.itemLink);
                            CursorUpdate(self);
                        end
                    </OnUpdate>
                </Scripts>
            </Button>
            <Button parentKey="NeedButton" inherits="LootRollButtonTemplate">
                <Size x="32" y="32"/>
                <Anchors>
                    <Anchor point="RIGHT" x="-33" y="-3"/>
                </Anchors>
                <NormalTexture file="Interface\Buttons\UI-GroupLoot-Dice-Up"/>
                <HighlightTexture file="Interface\Buttons\UI-GroupLoot-Dice-Highlight" alphaMode="ADD"/>
                <PushedTexture file="Interface\Buttons\UI-GroupLoot-Dice-Down"/>
            </Button>
            <Button parentKey="CloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeTo="$parentCorner" relativePoint="TOPRIGHT" x="5" y="5"/>
                </Anchors>
            </Button>
        </Frames>
    </Frame>
</Ui>
